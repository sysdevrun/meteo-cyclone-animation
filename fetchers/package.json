{
  "name": "meteo-france-cyclone-api",
  "version": "1.0.0",
  "description": "TypeScript library for accessing the Meteo France cyclone tracking API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "fetch:image": "tsx fetch_cmrs_image.ts",
    "fetch:api": "tsx fetch_meteofrance_api.ts",
    "fetch:satellite": "tsx fetch_satellite.ts"
  },
  "keywords": [
    "meteo-france",
    "cyclone",
    "weather",
    "api",
    "tropical-storm",
    "hurricane"
  ],
  "license": "MIT",
  "dependencies": {
    "@camptocamp/ogc-client": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
